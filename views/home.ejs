/* Navigation links */
.header .header-links {
    display: flex;
    align-items: center;
    gap: 15px;
}

.header .header-links a {
    text-decoration: none;
    color: #333;
    font-size: 16px;
    font-weight: bold;
    padding: 8px 12px;
    border-radius: 5px;
    transition: background 0.3s ease;
}

.header .header-links a:hover {
    background-color: #f0f0f0;
} 
    

  /* Slider Container */
.slider-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    background-color: #fff;
    padding: 10px 0;
}

/* Image Wrapper */
.image-track {
    display: flex;
    width: 200%;
    animation: scroll 10s linear infinite;
}

/* Individual Image */
.image-track img {
    width: 200px; /* Adjust image size */
    height: 120px; /* Adjust image height */
    margin: 0 10px;
    object-fit: cover;
    border-radius: 10px;
}

/* Keyframes for Infinite Scrolling */
@keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
}

/* Ensures smooth transition without gaps */
.image-track:hover {
    animation-play-state: paused;
}

 
      /* Adjust height for smaller screens */
      @media (max-width: 768px) {
        .navbar {
          height: 50px; /* Smaller height for mobile */
        }
        .navbar img {
          max-height: 50px;
        }
      }

      h1 {
        text-align: center;
      }
